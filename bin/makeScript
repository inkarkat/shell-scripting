#!/bin/bash
set -e

printUsage()
{
    cat <<HELPTEXT
Create an executable shell script from standard input.
HELPTEXT
    echo
    printf 'Usage: cat FILE [...] | %q %s\n' "$(basename "$1")" '[--bash|--shebang #!SHELL [--sourced]] [--sudo] [--] SCRIPT-FILE [-?|-h|--help]'
}

isSudo=
SUDO=
shebang=
isSourced=
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	    shift; printUsage "$0"; exit 0;;
	--sudo)		    shift; isSudo=t;;
	--bash)		    shift; shebang='#!/bin/bash';;
	--shebang)	    shift; shebang="$1"; shift;;
	--sourced)	    shift; isSourced=t;;
	--)		    shift; break;;
	-*)		    { echo "ERROR: Unknown option \"$1\"!"; echo; printUsage "$0"; } >&2; exit 2;;
	*)		    break;;
    esac
done
if [ $# -ne 1 ]; then
    printUsage "$0" >&2
    exit 2
fi
targetFilespec="${1:?}"; shift

[ "$isSudo" ] && [ $EUID -ne 0 ] && [ ! -w "$(dirname -- "$targetFilespec")" ] && SUDO=sudo

slurpInput()
{
    if [ -n "$SUDO" ]; then
	$SUDO tee -- "$targetFilespec" >/dev/null
    else
	cat > "$targetFilespec"
    fi
}

if [ -n "$shebang" ]; then
    sed -e "1i\\
${shebang//\\/\\\\}${isSourced:+ source-this-script}\\
" | slurpInput
else
    slurpInput
fi

if [ ! -s "$targetFilespec" ]; then
    echo >&2 'ERROR: No input'
    $SUDO rm --force -- "$targetFilespec" 2>/dev/null
    exit 1
fi
$SUDO chmod +x -- "$targetFilespec"
